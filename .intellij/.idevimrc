" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc


"" -- Suggested options --
" Show a few lines of context around the cursor. Note that this makes the
" text scroll if you mouse-click near the start or end of the window.
set scrolloff=5
set history=200

" Do incremental searching.
set incsearch
set hlsearch
nnoremap <Esc><Esc> :nohlsearch<CR><ESC>
set ignorecase
set smartcase
set WHICHWrap=b,s,h,l,<,>,[,],~
set showcmd
set number relativenumber
set autoindent

" Don't use Ex mode, use Q for formatting.
map Q gq

let mapleader = "\<space>"
set easymotion

map <leader>s <Plug>(easymotion-bd-f2)
map s <Plug>(easymotion-bd-f2)
map <Leader>l <Plug>(easymotion-bd-jk)

Plug 'machakann/vim-highlightedyank'
let g:highlightedyank_highlight_duration = "200"
let g:highlightedyank_highlight_color = "rgba(0, 240, 170, 155)"

Plug 'tpope/vim-commentary'
set keep-english-in-normal
set nrformats=

Plug 'vim-matchit'
set surround
set argtextobj
set textobj-entire


" nnoremap <Leader>a ggVG"+y
" nnoremap <Leader>a :<C-u>action $SelectAll<CR>:<C-u>action EditorCopy<CR><Esc>
nnoremap <Leader>a :<C-u>action $SelectAll<CR>:<C-u>action EditorCopy<CR>
nnoremap <Leader>u <C-r>
nnoremap <Leader>p "0p
nnoremap <Space> <Nop>
nnoremap <C-o> :<C-u>action Back<CR>
nnoremap <C-i> :<C-u>action Forward<CR>
nnoremap cre :<C-u>action RenameElement<CR>
nnoremap <Home> ^
nnoremap y "+y
nnoremap Y y$
nnoremap x "_x
nnoremap <Leader>k :<C-u>action ShowHoverInfo<CR>
nnoremap gi :<C-u>action GotoImplementation<CR>
nnoremap [g :<C-u>action VcsShowPrevChangeMarker<CR>
nnoremap ]g :<C-u>action VcsShowNextChangeMarker<CR>
nnoremap ga :<C-u>action ShowIntentionActions<CR>

inoremap <C-f> <C-r>
inoremap <Home> <C-o>^

vnoremap y "+y
vnoremap <Home> ^
vnoremap x "_x
